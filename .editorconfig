# EditorConfig - Configuration pour tous les éditeurs
# https://editorconfig.org

# Marque comme fichier racine
root = true

# Configuration par défaut pour tous les fichiers
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Fichiers JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# Fichiers JSON
[*.json]
indent_style = space
indent_size = 2

# Fichiers CSS/SCSS
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

# Fichiers HTML
[*.html]
indent_style = space
indent_size = 2

# Fichiers Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Fichiers YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Fichiers Python
[*.py]
indent_style = space
indent_size = 4

# Fichiers Shell
[*.sh]
end_of_line = lf
indent_style = space
indent_size = 2

# Fichiers PowerShell
[*.ps1]
end_of_line = crlf
indent_style = space
indent_size = 4

# Fichiers Batch
[*.bat]
end_of_line = crlf
indent_style = space
indent_size = 4

# Makefile (utilise des tabulations)
[Makefile]
indent_style = tab

# Package.json
[package.json]
indent_style = space
indent_size = 2

# Docker files
[Dockerfile]
indent_style = space
indent_size = 2

[docker-compose.yml]
indent_style = space
indent_size = 2
